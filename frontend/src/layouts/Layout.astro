---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Ocean Notes</title>
		<meta name="description" content="Simple notes app with Ocean Professional theme" />
	</head>
	<body>
		<ThemeToggle />
		<slot />
	</body>
</html>

<style>
	:root {
		/* Ocean Professional palette */
		--color-primary: #2563EB;
		--color-accent: #F59E0B;
		--color-error: #EF4444;
		--bg-color: #f9fafb;
		--surface: #ffffff;
		--text-color: #111827;
		--text-secondary: #4b5563;
		--border-color: rgba(0,0,0,0.08);
		--shadow-color: rgba(17,24,39,0.08);
		--shadow-hover: rgba(17,24,39,0.12);
	}

	body.dark-theme {
		--bg-color: #0b1220;
		--surface: #0e1627;
		--text-color: #f3f4f6;
		--text-secondary: #cbd5e1;
		--border-color: rgba(255,255,255,0.08);
		--shadow-color: rgba(0,0,0,0.35);
		--shadow-hover: rgba(0,0,0,0.4);
	}

	html, body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		background: var(--bg-color);
		color: var(--text-color);
		font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
		transition: background-color .25s ease, color .25s ease;
	}

	/* Smooth focus outline compatible with Ocean Professional */
	:focus-visible {
		outline: 3px solid rgba(37, 99, 235, 0.4);
		outline-offset: 2px;
	}
</style>
